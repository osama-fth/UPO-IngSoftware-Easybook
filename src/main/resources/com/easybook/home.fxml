<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17"
            fx:controller="com.easybook.view.HomeViewController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header con titolo e logout -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label fx:id="lblBenvenuto" text="Benvenuto in EasyBook" 
                   style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#logout" prefWidth="100" 
                    style="-fx-base: #f44336; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <!-- Menu centrale -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="40"/>
            </padding>
            
            <Label text="Menu Principale" style="-fx-font-size: 18px;"/>
            
            <Button text="Gestione Utenti" onAction="#vaiAgliUtenti" prefWidth="250" prefHeight="45"
                    style="-fx-base: #2196F3; -fx-text-fill: white; -fx-font-size: 14px;"/>
            <Button text="Gestione Catalogo" onAction="#vaiAlCatalogo" prefWidth="250" prefHeight="45"
                    style="-fx-base: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;"/>
            <Button text="Gestione Prestiti" onAction="#vaiAMenuPrestiti" prefWidth="250" prefHeight="45"
                    style="-fx-base: #FF9800; -fx-text-fill: white; -fx-font-size: 14px;"/>
        </VBox>
    </center>
</BorderPane>
