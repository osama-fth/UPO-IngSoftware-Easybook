<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" spacing="15" xmlns="http://javafx.com/javafx/17"
      fx:controller="com.easybook.view.MenuPrestitiViewController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Gestione Prestiti" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Tabella Prestiti -->
    <TableView fx:id="tabellaPrestiti" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colUtente" text="Utente (CF)" prefWidth="150"/>
            <TableColumn fx:id="colLibro" text="Libro" prefWidth="200"/>
            <TableColumn fx:id="colDataInizio" text="Data Presa" prefWidth="100"/>
            <TableColumn fx:id="colDataScadenza" text="Scadenza" prefWidth="100"/>
            <TableColumn fx:id="colDataRestituzione" text="Restituito Il" prefWidth="100"/>
            <TableColumn fx:id="colStato" text="Stato" prefWidth="80"/>
        </columns>
    </TableView>

    <!-- Form Nuovo Prestito -->
    <GridPane hgap="10" vgap="10">
        <Label text="CF Utente:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cmbCfUtente" promptText="Seleziona utente..." prefWidth="200" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="ISBN Libro:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <ComboBox fx:id="cmbIsbnLibro" promptText="Seleziona libro..." prefWidth="250" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
    </GridPane>

    <!-- Bottoni Azione -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Registra Nuovo Prestito" onAction="#handleRegistraPrestito" 
                style="-fx-base: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Registra Restituzione" onAction="#handleRestituzione" 
                style="-fx-base: #2196F3; -fx-text-fill: white;"/>
        <Separator orientation="VERTICAL"/>
        <Button text="Gestione Sanzioni" onAction="#vaiASanzioni" 
                style="-fx-base: #f44336; -fx-text-fill: white;"/>
    </HBox>

    <!-- Navigazione e Messaggi -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="â† Torna alla Home" onAction="#tornaHome"/>
        <Label fx:id="lblMessaggio" text="" style="-fx-font-weight: bold;"/>
    </HBox>
</VBox>
