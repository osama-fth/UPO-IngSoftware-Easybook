<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" spacing="15" xmlns="http://javafx.com/javafx/17"
      fx:controller="com.easybook.view.SanzioniViewController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Gestione Sanzioni" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Tabella Sanzioni -->
    <TableView fx:id="tabellaSanzioni" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID Sanzione" prefWidth="100"/>
            <TableColumn fx:id="colIdPrestito" text="ID Prestito" prefWidth="100"/>
            <TableColumn fx:id="colUtente" text="Utente (CF)" prefWidth="150"/>
            <TableColumn fx:id="colLibro" text="Libro" prefWidth="180"/>
            <TableColumn fx:id="colImporto" text="Importo (€)" prefWidth="100"/>
            <TableColumn fx:id="colStato" text="Stato" prefWidth="100"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <!-- Bottoni Azione -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Segna come Pagata" onAction="#handlePagata"
                style="-fx-base: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Aggiorna Lista" onAction="#aggiornaTabella"/>
    </HBox>

    <!-- Navigazione e Messaggi -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="← Torna a Gestione Prestiti" onAction="#tornaIndietro"/>
        <Label fx:id="lblMessaggio" text="" style="-fx-font-weight: bold;"/>
    </HBox>
</VBox>
